
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="h2 text-primary">Product Management</h1>
            <div class="action-buttons">
                <a href="/views/category/category-form" class="btn btn-info me-2">
                    <i class="bi bi-plus-circle me-1"></i>Create New Product
                </a>
                <a href="/views/category/category-form-selction" class="btn btn-outline-info">
                    <i class="bi bi-folder-plus me-1"></i>Create New Category
                </a>
                <a href="/views/category/orders" class="btn btn-info me-2">
                    <i class="bi bi-plus-circle me-1"></i>view orders
                </a>
            </div>
        </div>

        <div class="table-container">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <% for( let index = 1; index <= totalPages; index++ ) { %>
                        <li class="page-item"><a class="page-link" href="/views/category?page=<%= index %>"><%= index %></a></li>
                    <% } %>
                </ul>
            </nav>

            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Quantity</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let index = 0; index < categories.length; index++ ) { %>
                            <tr>
                                <td><%= categories[index]._id %></td>
                                <td><%= categories[index].product %></td>
                                <td>$<%= categories[index].price %></td>
                                <td><%= categories[index].description %></td>
                                <td><%= categories[index].category %></td>
                                <td><%= categories[index].quantity %></td>
                                <td><img src="/<%= categories[index].picture %>" class="img-thumbnail" alt="Product Image"/></td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/views/category/edit/<%= categories[index]._id %>" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>
                                        <a href="/views/category/delete/<%=categories[index]._id %>" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>